{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "types": ["playwright", "node"],
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["tests/**/*", "playwright.config.ts"]
}
