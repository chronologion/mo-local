{
  "name": "@mo/api",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/main.ts",
    "start": "node -r tsconfig-paths/register dist/main.js",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests --exclude \"**/*.e2e.test.ts\"",
    "test:integration": "vitest run src/__tests__/**/*.e2e.test.ts --passWithNoTests",
    "db:migrate": "tsx src/access/infrastructure/migrations/run.ts && tsx src/sync/infrastructure/migrations/run.ts",
    "db:migrate:down": "tsx src/sync/infrastructure/migrations/run.ts down && tsx src/access/infrastructure/migrations/run.ts down"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.9",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.16"
  }
}
