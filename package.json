{
  "name": "mo-local",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @mo/web dev",
    "dev:api": "yarn workspace @mo/api dev",
    "dev:stack": "NODE_ENV=development ./scripts/dev-stack.sh start",
    "dev:stack:stop": "./scripts/dev-stack.sh stop",
    "dev:stack:reset": "./scripts/dev-stack.sh reset",
    "dev:stack:logs": "./scripts/dev-stack.sh logs",
    "dev:stack:status": "./scripts/dev-stack.sh status",
    "db:migrate": "yarn workspace @mo/api db:migrate",
    "db:migrate:down": "yarn workspace @mo/api db:migrate:down",
    "test": "yarn test:unit",
    "test:unit": "yarn workspace @mo/domain test && yarn workspace @mo/application test && yarn workspace @mo/infrastructure test && yarn workspace @mo/presentation test && yarn workspace @mo/web test && yarn workspace @mo/api test",
    "test:integration": "yarn workspace @mo/api test:integration",
    "test:all": "yarn test:unit && yarn test:integration && yarn e2e",
    "e2e": "yarn workspace @mo/e2e test",
    "build": "yarn workspaces run build",
    "typecheck": "yarn workspaces run typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.3",
    "typescript": "^5.3.3",
    "zod": "^4.1.13"
  },
  "dependencies": {
    "@livestore/peer-deps": "0.4.0-dev.19"
  }
}
